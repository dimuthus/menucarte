{% extends 'base.html.twig' %}

{% block title %}Liste index
{% endblock %}

{% block body %}
	<br>
	<div class="container">
		<h2>Liste</h2>
		<br>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Stadt</th>
					<th>Telefon</th>
					<th>Vorgang</th>
				</tr>
			</thead>
			<tbody>
				{% for liste in listes %}
					<tr>
						<td>{{ liste.id }}</td>
						<td>{{ liste.name }}</td>
						<td>{{ liste.stadt }}</td>
						<td>{{ liste.telefon }}</td>
						<td>
							<a href="{{ path('liste_show', {'id': liste.id}) }}">Anzeigen</a>
							<a href="{{ path('liste_edit', {'id': liste.id}) }}">Bearbeiten</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Keine Datens√§tze gefunden!</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('liste_new') }}">Anlegen</a>
	</div>
{% endblock %}
